<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appGreen</item>

        <item name="android:textColor">@color/textColor3</item>
        <item name="android:editTextColor">@color/textColor3</item>
        <item name="android:amPmTextColor">@color/textColor3</item>

        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>
        <!--        <item name="android:seekBarStyle">@style/SeekBar</item>-->
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:radioButtonStyle">@style/MyRadioButtonStyle</item>
        <item name="android:editTextStyle">@style/MyEditText</item>

        <item name="android:textColorHint">@color/colorPrimary</item>

        <item name="android:progressBackgroundTint">@color/dimgray</item>
        <item name="android:progressTint">@color/dimgray</item>
        <item name="android:colorControlActivated">@color/dimgray</item>
        <item name="android:colorControlNormal">@color/dimgray</item>

        <item name="android:itemBackground">@color/gray</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <!--        <item name="android:popupMenuStyle">@style/PopupMenu</item>-->
        <!--        <item name="android:itemBackground">@color/red</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Optional, but recommended for full edge-to-edge rendering -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="kfc_theme_background">@color/gray</item>
        <item name="kfc_theme_foreground">@color/colorPrimary</item>
        <item name="kfc_theme_title">@color/colorPrimary</item>
        <item name="kfc_theme_breadcrumb">@color/colorPrimary</item>
        <item name="kfc_theme_toolbox">@color/colorPrimary</item>
        <item name="kfc_theme_search_text">@color/colorPrimary</item>
        <item name="kfc_theme_search_hint">@color/textColor3</item>
        <item name="kfc_theme_status">@color/colorPrimary</item>
        <item name="kfc_theme_file_icon">@color/colorPrimary</item>
        <item name="kfc_theme_file_name">@color/colorPrimary</item>
        <item name="kfc_theme_file_information">@color/colorPrimary</item>
        <item name="kfc_theme_file_flag">@color/colorPrimary</item>
        <item name="kfc_theme_file_asterisk">@color/colorPrimary</item>
        <item name="kfc_theme_checkbox">@color/colorAccent</item>
        <item name="kfc_theme_cancel_button">@color/colorAccent</item>
        <item name="kfc_theme_ok_button">@color/colorAccent</item>
        <item name="kfc_theme_create_folder_button">@color/colorPrimary</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/textColor3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:popupElevation">10dp</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>


    <style name="UrlDialogCustom">
        <!--        <item name="android:textColor">@color/white</item>-->
        <!--        <item name="android:textStyle">bold</item>-->
        <!--        <item name="android:headerDividersEnabled">true</item>-->
        <!--        <item name="android:typeface">normal</item>-->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColor3</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="buttonTint">@color/textColor3</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/textColor3</item>
        <item name="buttonTint">@color/textColor3</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/textColor3</item>
        <item name="buttonTint">@color/textColor3</item>
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <!--    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">-->
    <!--        <item name="android:progressBackgroundTint">@color/red</item>-->
    <!--        <item name="android:progressTint">@color/red</item>-->
    <!--        <item name="android:colorControlActivated">@color/red</item>-->
    <!--        <item name="android:colorControlNormal">@color/red</item>-->
    <!--    </style>-->

</resources>
